{
    "dashboard": {
        "title": "Valerix Microservices Overview",
        "tags": [
            "valerix",
            "microservices"
        ],
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                },
                "type": "graph",
                "title": "HTTP Request Rate",
                "targets": [
                    {
                        "expr": "rate(http_requests_total[5m])",
                        "legendFormat": "{{job}} - {{method}} {{route}} [{{status_code}}]",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "label": "requests/s",
                        "format": "short"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "id": 2,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                },
                "type": "graph",
                "title": "HTTP Request Duration (p95)",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
                        "legendFormat": "{{job}} - {{method}} {{route}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "label": "seconds",
                        "format": "s"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "id": 3,
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 0,
                    "y": 8
                },
                "type": "stat",
                "title": "Service Health",
                "targets": [
                    {
                        "expr": "up{job=~\"order-service|inventory-service\"}",
                        "legendFormat": "{{job}}",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "mappings": [
                            {
                                "type": "value",
                                "options": {
                                    "0": {
                                        "text": "DOWN",
                                        "color": "red"
                                    },
                                    "1": {
                                        "text": "UP",
                                        "color": "green"
                                    }
                                }
                            }
                        ],
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "red"
                                },
                                {
                                    "value": 1,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 4,
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 8,
                    "y": 8
                },
                "type": "graph",
                "title": "Orders Created",
                "targets": [
                    {
                        "expr": "rate(orders_created_total[5m])",
                        "legendFormat": "{{status}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "label": "orders/s",
                        "format": "short"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "id": 5,
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 16,
                    "y": 8
                },
                "type": "graph",
                "title": "Order Processing Duration",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(order_processing_duration_seconds_bucket[5m]))",
                        "legendFormat": "p95",
                        "refId": "A"
                    },
                    {
                        "expr": "histogram_quantile(0.50, rate(order_processing_duration_seconds_bucket[5m]))",
                        "legendFormat": "p50",
                        "refId": "B"
                    }
                ],
                "yaxes": [
                    {
                        "label": "seconds",
                        "format": "s"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "id": 6,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 16
                },
                "type": "graph",
                "title": "Inventory Service Calls Duration",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(inventory_service_call_duration_seconds_bucket[5m]))",
                        "legendFormat": "p95 - {{status}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "label": "seconds",
                        "format": "s"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "id": 7,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 16
                },
                "type": "graph",
                "title": "Process Memory",
                "targets": [
                    {
                        "expr": "process_resident_memory_bytes{job=~\"order-service|inventory-service\"}",
                        "legendFormat": "{{job}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "label": "bytes",
                        "format": "bytes"
                    },
                    {
                        "format": "short"
                    }
                ]
            }
        ],
        "schemaVersion": 16,
        "version": 0,
        "refresh": "5s"
    }
}