# Server Configuration
NODE_ENV=development
PORT=3002

# Database
DATABASE_URL=postgresql://inventoryuser:inventorypass@localhost:5433/inventorydb
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Gremlin Latency Simulation (for chaos testing)
GREMLIN_ENABLED=false
GREMLIN_LATENCY_MS=3000
GREMLIN_PROBABILITY=0.2
GREMLIN_PATTERN=deterministic

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true

# Health Check
HEALTH_CHECK_TIMEOUT=3000

# Optimistic Locking
ENABLE_OPTIMISTIC_LOCKING=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
