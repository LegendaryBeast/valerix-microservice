# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://orderuser:orderpass@localhost:5432/orderdb
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# RabbitMQ
RABBITMQ_URL=amqp://valerix:valerixpass@localhost:5672
RABBITMQ_EXCHANGE=valerix-events
RABBITMQ_QUEUE=order-events

# Inventory Service
INVENTORY_SERVICE_URL=http://localhost:3002
INVENTORY_SERVICE_TIMEOUT=5000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000
CIRCUIT_BREAKER_VOLUME_THRESHOLD=10

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1000
RETRY_MAX_DELAY=10000
RETRY_BACKOFF_MULTIPLIER=2

# Timeout Configuration
HTTP_CONNECT_TIMEOUT=2000
HTTP_READ_TIMEOUT=5000
HTTP_TOTAL_TIMEOUT=7000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true

# Idempotency
IDEMPOTENCY_TTL_HOURS=24

# Health Check
HEALTH_CHECK_TIMEOUT=3000
